<%- include('partials/header') %>

<section id="signIn">
  <div class="container-fluid my-5 pb-5">
    <div class="row justify-content-end">
      <div class="col-md-5 col-12">
        <div class="login-card-yellow p-3 box-shadow rounded text-center">
          <div class="pt-3">
            <h2 class="text-dark">Sign In</h2>
          </div>
          <div class="mt-3 d-flex justify-content-center">
            <form class="w-sm-75" action="/login" method="POST">
              <div class="form-group">
                <input type="email" name="username" class="form-control form-control-sm bg-light" placeholder="Email Id">
              </div>

              <div class="form-group">
                <input type="password" name="password" class="form-control form-control-sm bg-light" placeholder="Password">
              </div>
              <div class="text-right">
                <a href="/forget" role="button">Forgot Password?</a>
              </div>

              <div class="mt-3">
                <button class="btn btn-sm btn-light col">
                  Login
                </button>
              </div>
              <div class="font-weight-bold mt-2">
                <p class="m-0"><%=alerts%></p>
              </div>
            </form>
          </div>

          

          <div class="mt-5">
            <hr class="darkLineDivider mb-4">
            <h2 class="text-dark ">
            New Customer</h2>
          </div>
          <div class="d-flex justify-content-center">
          <div class="text-center w-sm-75 ">
            <p class="text-justify">
              Create an Account today to reap the benefits of changing your car tires at your place.
            </p>
            <a href="/register" class="btn btn-dark text-uppercase" role="button">Create new account</a>
          </div>
        </div>

        </div>

      </div>
      <div class="col-md-4 col-12 mt-3 mt-md-0">
        <div class="row module-border-wrap  mx-0">
          <div class="pt-3 bg-white w-100">
            <div class="py-3 text-center">
              <h4 class="text-dark"> Social Login</h4>
              <p class="text-center">Login with your social media account</p>

            </div>
            <div class="social-btn text-center w-100 px-1 pb-3">
              <a class="btn btn-block btn-social btn-md btn-facebook" href="/auth/facebook" role="button"><i
                  class="fab fa-facebook"></i> Sign in with <b>Facebook</b></a>
              <a class="btn btn-social btn-md btn-google btn-block" href="/auth/google" role="button"><i
                  class="fab fa-google"></i> Sign in with <b>Google</b></a>
            </div>
          </div>
        </div>
      </div>
