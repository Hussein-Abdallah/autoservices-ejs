<%- include('partials/header') %>

<main class="position-relative">
    <section class="login-booking d-flex flex-grow-1 align-items-center">
    </section>
    <div class="container booking-section">
        <div class="row justify-content-center py-3">
            <div class="col-md-10 col-12">
                <nav>
                    <div class="nav nav-tabs text-center" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link w-50 active" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                            role="tab" aria-controls="nav-home" aria-selected="true">Sign In</a>
                        <a class="nav-item nav-link w-50" id="nav-profile-tab" data-toggle="tab" href="#nav-profile"
                            role="tab" aria-controls="nav-profile" aria-selected="false">Register</a>

                    </div>
                </nav>
                <div class="tab-content b-lrb" id="nav-tabContent">
                    <!-- Sign in Tab -->
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="pt-5  w-75 d-flex justify-content-center mx-auto">
                            <form class="w-sm-75" action="/login" method="POST">
                                <div class="form-group">
                                    <input type="text" name="username" class="form-control form-control-sm bg-light"
                                        placeholder="Username">
                                </div>

                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-sm bg-light"
                                        placeholder="Password">
                                </div>
                                <div class="text-right">
                                    <a href="/forget" role="button">Forgot Password?</a>
                                </div>

                                <div class="mt-3 d-flex align-self-center">
                                    <button class="btn btn-sm btn-light col-12 col-md-8 mx-auto text-center">
                                        Login
                                    </button>
                                </div>
                                <div class="font-weight-bold mt-2">
                                    <p class="m-0"></p>
                                </div>
                            </form>
                        </div>
                        <hr class="darkLineDivider w-25 mb-4">
                        <div class="social-btn w-75 mx-auto mb-5">
                            <div class="mt-3 w-sm-75 mx-auto d-flex align-self-center">
                                <a class="btn btn-block btn-social btn-md btn-facebook w-sm-75 mx-auto text-center"
                                href="/auth/facebook" role="button"><i class="fab fa-facebook"></i> Sign in with
                                <b>Facebook</b></a>
                            
                            </div>
                            <div class="mt-3 w-sm-75 mx-auto d-flex align-self-center">
                                <a class="btn btn-social btn-md btn-google btn-block w-sm-75 mx-auto text-center" href="/auth/google"
                                role="button"><i class="fab fa-google"></i> Sign in with <strong>Google</strong> </a>
                            </div>
                            
                        </div>

                    </div>
                    <!-- End of Sign up Tab -->
                    <!-- Register Tab -->
                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <div class="pt-5  w-75 d-flex justify-content-center mx-auto">
                             <!-- Registr Form -->
                             <form class="w-sm-75" action="/register" method="POST">
                                <div class="clearfix">
                                  <div class="form-group float-left w-45 ">
                                    <input type="text" name="firstName" class="form-control form-control-sm bg-light" placeholder="First Name" required>
                                  </div>
                                  <div class="form-group float-right w-45">
                                    <input type="text" name="lastName" class="form-control form-control-sm bg-light" placeholder="Last Name" required>
                                  </div>
                                </div>
                                <div class="form-group ">
                                  <input type="email" name="email" class="form-control form-control-sm bg-light" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                  <input type="text" name="username" class="form-control form-control-sm bg-light" placeholder="Username" required>
                                </div>
                                <div class="clearfix">
                                  <div class="form-group float-left w-45">
                                    <input type="password" name="password" class="form-control form-control-sm bg-light" placeholder="Password" required>
                                  </div>
                                  <div class="form-group float-right w-45">
                                    <input type="password" name="confirmPassword" class="form-control form-control-sm bg-light" placeholder="Confirm Password" required>
                                  </div>
                                </div>
                                <div class="form-group">
                                  <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control form-control-sm bg-light" placeholder="Phone Number" required>
                                </div>
                                <div class="form-group">
                                  <div class="input-group-prepend">
                                    <input type="checkbox" name="terms" value="true" class="mr-3"  aria-label="Checkbox for accepting AutoServices Terms and Conditions" required>
                                    <small class=" font-weight-bold">I accept the terms and conditions</small>
                                  </div>
                  
                                </div>
                                <div class="font-weight-bold mt-2">
                                  <p class="m-0"><small></small></p>
                                </div>
                                <div class="mt-4 d-flex justify-content-center">
                                  <button class="btn btn-sm btn-light col-12 col-md-8">
                                    Register
                                  </button>
                                </div>
                                
                              </form>
                             <!-- End of Registr Form -->
                        </div>
                        <hr class="darkLineDivider w-25 mb-4">
                        <div class="social-btn w-75 mx-auto mb-5">
                            <div class="mt-3 w-sm-75 mx-auto d-flex align-self-center">
                                <a class="btn btn-block btn-social btn-md btn-facebook w-sm-75 mx-auto text-center"
                                href="/auth/facebook" role="button"><i class="fab fa-facebook"></i> Sign in with
                                <b>Facebook</b></a>
                            
                            </div>
                            <div class="mt-3 w-sm-75 mx-auto d-flex align-self-center">
                                <a class="btn btn-social btn-md btn-google btn-block w-sm-75 mx-auto text-center" href="/auth/google"
                                role="button"><i class="fab fa-google"></i> Sign in with <strong>Google</strong> </a>
                            </div>
                            
                        </div>
                    </div>
                    <!-- End of Register Tab -->

                </div>

            </div>
        </div>
    </div>
</main>





<%- include('partials/footer') %>